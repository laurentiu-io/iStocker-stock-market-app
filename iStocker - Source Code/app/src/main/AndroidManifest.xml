<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.novoapps.istocker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".MarketsActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".LoginRegister" />

        <activity
            android:name=".ResourcesActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".Stocks" />
        <service android:name=".Forex" />
        <service android:name=".Commodities" />

        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".PortfolioActivity"></activity>
    </application>

</manifest>
